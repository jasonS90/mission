<p id="notice"><%= notice %></p>

<h1>Missions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Payment</th>
      <th>Address</th>
      <th>File</th>
      <th>Description</th>
      <th>User</th>
      <th>Select</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.title %></td>
        <td><%= mission.category %></td>
        <td><%= mission.payment %></td>
        <td><%= mission.address %></td>
        <td><%= mission.file %></td>
        <td><%= mission.description %></td>
        <td><%= mission.user %></td>
        <td><%= mission.select %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

